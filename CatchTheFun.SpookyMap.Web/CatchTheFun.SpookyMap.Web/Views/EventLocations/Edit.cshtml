@model CatchTheFun.SpookyMap.Web.Models.EventLocation

@{
    ViewData["Title"] = "Edit";
}

<h1 class="h-spooky">Edit</h1>

<div class="row">
    <div class="col-md-6 col-lg-5">
        <form asp-action="Edit" enctype="multipart/form-data" class="card shadow-sm p-4">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <section class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </section>

            <section class="mb-3">
                <label asp-for="Address" class="form-label"></label>
                <input asp-for="Address" class="form-control" />
                <small class="text-muted">If you change the address, coordinates will be updated automatically.</small>
                <span asp-validation-for="Address" class="text-danger"></span>
            </section>

            <section class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </section>

            <section class="mb-3">
                <label class="form-label">@Html.DisplayNameFor(m => m.SomethingElse)</label>
                <div class="d-flex gap-4">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="SomethingElse" value="true" id="se-yes">
                        <label class="form-check-label" for="se-yes">Yes</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="SomethingElse" value="false" id="se-no">
                        <label class="form-check-label" for="se-no">No</label>
                    </div>
                </div>
                <span asp-validation-for="SomethingElse" class="text-danger"></span>
            </section>

            <section class="mb-3">
                <div class="row g-3">
                    <div class="col-sm-6">
                        <label asp-for="StartTime" class="form-label">Start Time</label>
                        <input type="time" class="form-control" asp-for="StartTime" />
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="EndTime" class="form-label">End Time</label>
                        <input type="time" class="form-control" asp-for="EndTime" />
                    </div>
                </div>
            </section>

            <section class="mb-4">
                <label for="photo" class="form-label">Photo (optional)</label>
                <input type="file" id="photo" name="photo" accept="image/*" class="form-control" />
                @if (!string.IsNullOrWhiteSpace(Model.PhotoUrl))
                {
                    <div class="mt-2">
                        <img src="@Model.PhotoUrl" alt="current photo" style="width:160px;height:110px;object-fit:cover;border-radius:8px" />
                    </div>
                }
            </section>

            <div class="d-flex gap-2">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
